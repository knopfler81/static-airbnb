<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->

<div class="banner-flat" style="background-image:linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path flat.picture %>');">

</div>
<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner">
            <%= image_tag flat.owner_picture, class: "img-circle" %>
            <p><%= flat.owner_name %></p>
          </div>

          <div class="header-flat-name">
            <h1><%= flat.summary %></h1>
            <p><%= flat.city %></p>
            <i class="fa fa-star star-yellow"></i>
            <i class="fa fa-star star-yellow"></i>
            <i class="fa fa-star star-yellow"></i>
            <i class="fa fa-star star-yellow"></i>
            <i class="fa fa-star"></i>
          </div>
         </div>
        </div>

        <div class="col-xs-12 col-sm-4">

          <form action="#" class="book-form">
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                 <input class="form-control" type="text" placeholder="checkin" id="checkin">
              </div>
               <div class="col-xs-6">
                 <input class="form-control" type="text" placeholder="checkout" id="checkout">
              </div>
            </div>
          </div>

          <div class="form-group">
            <select name="Guest" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
            <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%" class="form-control">
          </div>
          </form>
        </div>
    </div>
  </div>
</div>
<div class="flat-description grey-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this flat</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Libero laborum ad, harum voluptatum impedit, aperiam qui officia officiis, dignissimos accusamus consequuntur sequi quis quibusdam provident rerum, saepe deleniti aliquid consequatur.</p>
        <hr>
        <div class="row">
          <div class="col-xs-12 col-sm-2">
            The Space
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class= "list-unstyled">
              <li>Accomodates: <strong>2</strong></li>
              <li>Bathroom: <strong>1</strong></li>
              <li>Bed type: <strong>Real bed</strong></li>
              <li>Bedroom: <strong>Real bed</strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class= "list-unstyled">
              <li>Bed: <strong>1</strong></li>
              <li>Property type: <strong> Appartement</strong></li>
              <li>Room type: <strong>Entire home/apt</strong></li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-xs-12 col-sm-2">
            Amenties
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class= "list-unstyled">
              <li><i class="fa fa-cutlery"></i>Kitchen</li>
              <li>Wifi</li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class= "list-unstyled">
              <li>TV: <strong>x</strong></li>
              <li>Welcome Drink: <strong>x</strong></li>
            </ul>
          </div>
        </div>
       </div>
    </div>
  </div>
</div>
